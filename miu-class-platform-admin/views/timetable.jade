extends layout

block content
    meta(name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" )
    link(rel='stylesheet', href='/lib/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css')
    link(rel='stylesheet', href='/stylesheets/container-style.css')

    div.container
        div.row
            form.form-inline
                div.form-group
                    select.form-control.has-margin(id="roomSelect" style="width: auto")
                    button.btn.btn-primary.has-margin(id='searchClass' type='button') 查询
                    button.btn.btn-primary.has-margin(id='changeClass' type='button') 修改课程
                    button.btn.btn-primary.has-margin(id='deleteClass' type='button') 删除课程


        div.row
            div.table-responsive.col-md-12
                table.table.table-hover
                    thead
                        tr
                            td.class-title <h3>周一</h3>
                            td.class-title <h3>周二</h3>
                            td.class-title <h3>周三</h3>
                            td.class-title <h3>周四</h3>
                            td.class-title <h3>周五</h3>
                            td.class-title <h3>周六</h3>
                            td.class-title <h3>周日</h3>

                    tbody(id='timetableList')

        div.modal.fade(tabindex="-1" role="dialog" id='classInfoModal')
            div.modal-dialog(role='document')
                div.modal-content
                    div.modal-header
                        h4.modal-title 修改课程信息
                    div.modal-body
                        form.form-horizontal(role="form")
                            div.form-group
                                label.col-sm-2.control-label(for="classname") 课程名称
                                div.col-sm-10
                                    input.form-control.class-detail.class-require(id="classname")

                            div.form-group
                                label.col-sm-2.control-label(for="roomId") 上课教室
                                div.col-sm-10
                                    select.form-control.class-require(id="roomId")

                            div.form-group
                                label.col-sm-2.control-label(for="teacher") 上课老师
                                div.col-sm-10
                                    select.form-control.class-require(id="teacher")

                            div.form-group
                                label.col-sm-2.control-label(for="week") 周次
                                div.col-sm-10
                                    select.form-control.class-require(id="week")
                                        option(value="1") 周一
                                        option(value="2") 周二
                                        option(value="3") 周三
                                        option(value="4") 周四
                                        option(value="5") 周五
                                        option(value="6") 周六
                                        option(value="7") 周日

                            div.form-group
                                label.col-sm-2.control-label(for="time") 时间
                                div.col-sm-10
                                    input.form-control.class-detail.class-require(id="time")

                            div.form-group
                                label.col-sm-2.control-label(for="classType") 课程类型
                                div.col-sm-10
                                    select.form-control.class-require(id="classType")
                                        option(value="1") 次数课程
                                        option(value="2") 孕妇课程
                                        option(value="3") 产后课程

                            div.form-group
                                label.col-sm-2.control-label(for="maxCount") 课容量
                                div.col-sm-10
                                    input.form-control.class-detail.class-require(id="maxCount" type="number")

                            div.form-group
                                label.col-sm-2.control-label(for="minCount") 最少开课人数
                                div.col-sm-10
                                    input.form-control.class-detail.class-require(id="minCount" type="number")

                            div.form-group
                                label.col-sm-2.control-label(for="swipeNumber") 刷卡次数
                                div.col-sm-10
                                    input.form-control.class-detail.class-require(id="swipeNumber" type="number")

                    div.modal-footer
                        button.btn.btn-primary(id="createBtn") 确认
                        button.btn.btn-default(data-dismiss="modal") 返回

    script(type='text/javascript', src='/lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js')
    script(type='text/javascript', src='/lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.zh-CN.js')
    script(type='text/javascript', src='/js/timetable.js')