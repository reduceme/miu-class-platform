extends layout

block content
    meta(name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" )
    link(rel='stylesheet', href='/stylesheets/index.css')

    div.container
        div.row
            div.col-md-4.col-md-offset-4
                img.logo-img(src='/image/logo.png')
        div.row.row-margin
            div.col-md-4.col-md-offset-4
                input.form-control(placeholder='请输入用户名' type='text' id='username')
        div.row.row-margin
            div.col-md-4.col-md-offset-4
                input.form-control(placeholder='请输入密码' type='password' id='password')
        div.row.row-margin
            div.col-md-4.col-md-offset-4
                button.btn.btn-primary.btn-login(id='login') 登录

    //
        div.modal.fade.bs-example-modal-sm(tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" id='error')
            div.modal-dialog.modal-sm(role='document')
                div.modal-content
                    div.modal-header
                        h4.modal-title 提示
                    div.modal-body
                        p 用户名或密码错误
                    div.modal-footer
                        button.btn.btn-default(data-dismiss="modal") 返回

    script(type='text/javascript', src='/js/login.js')
