extends layout

block content
    meta(name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" )
    link(rel='stylesheet', href='/stylesheets/user-list.css')
    div.container
        div.row
            form.form-inline
                div.form-group
                    input.form-control(placeholder='请输入会员姓名或卡号' id='searchInfo')
                    button.btn.btn-primary(id='search' type='button') 查询

        div.row
            div.table-responsive.col-md-12
                table.table.table-hover
                    thead
                    tr
                        td 会员姓名
                        td 联系电话
                        td 办卡教室
                        td 办卡人员
                        td 卡种类型
                        td 创建时间
                        td 开卡时间
                        td 截止时间
                        td 总次数
                        td 剩余次数
                        td 上课详情
                    tbody(id='userListTable')

    div.modal.fade(tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" id='classDetailModal')
        div.modal-dialog.modal-sm(role='document')
            div.modal-content
                div.modal-header
                    h4.modal-title 约课详情
                div.modal-body
                    table.table.table-bordered
                        thead
                        tr
                            td 时间
                            td 课程

                        tbody(id='classDetailTable')
                div.modal-footer
                    button.btn.btn-default(data-dismiss="modal") 返回
    script(type='text/javascript', src='/js/userList.js')